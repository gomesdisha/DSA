{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "C/C++: g++.exe build active file",
      "type": "shell",
      "command": "g++",
      "args": [
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "compiler: g++"
    },
    {
      "label": "Run C++ program with input",
      "type": "shell",
      "command": "cmd.exe",
      "args": [
        "/c",
        "${fileDirname}\\${fileBasenameNoExtension}.exe < input.txt > output.txt"
      ],
      "problemMatcher": [],
      "dependsOn": "C/C++: g++.exe build active file",
      "group": {
        "kind": "build",
        "isDefault": false
      }
    }
  ]
}
